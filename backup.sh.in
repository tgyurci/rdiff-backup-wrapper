#!/bin/sh

#
# backup.sh - rdiff-backup wrapper
#

etcdir="@prefix@/etc"

# load global config
for backuprc in "$etcdir/backuprc" "$HOME/.backuprc"; do
	if [ -f "$backuprc" ]; then
		. "$backuprc"
	fi
done

suite="$1"
shift

if [ -z "$suite" ]; then
	echo "Kellene paraméter!"
	exit 1
fi

if [ ! -d "$suite" ]; then
	echo "Nincs ilyen könyvtár: $suite"
	exit 1
fi

config="$suite/config"

if [ ! -f "$config" ]; then
	echo "Nincs config: $config"
	exit 1
fi

# default values
compress="no"
verbose="5"

. "$config"

action="$1"
shift

#rdiff_backup="/usr/local/rdiff-backup/bin/rdiff-backup"
rdiff_backup="@rdiff_backup@"
sed="@sed@"
rm="@rm@"
cat="@cat@"

#source="${sourceuser}@${sourcehost}::${sourcedir}"
if [ -z "$sourcedir" ]; then
	echo "Nincs sourcedir!"
	exit 1
fi

if [ -z "$sourcehost" -a -n "$sourceuser" ]; then
	echo "Nincs sourcehost, de van sourceuser!"
	exit 1
fi

source="$sourcedir"
[ -n "$sourcehost" ] && source="${sourcehost}::${source}"
[ -n "$sourceuser" ] && source="${sourceuser}@${source}"

#target="${targetuser}@${targethost}::${targetdir}"
if [ -z "$targetdir" ]; then
	echo "Nincs targetdir!"
	exit 1
fi

if [ -z "$targethost" -a -n "$targetuser" ]; then
	echo "Nincs targethost, de van targetuser!"
	exit 1
fi

target="$targetdir"
[ -n "$targethost" ] && target="${targethost}::${target}"
[ -n "$targetuser" ] && target="${targetuser}@${target}"

case "$compress" in
	[Yy][Ee][Ss])
		compress=""
	;;
	[Nn][Oo])
		compress="--ssh-no-compression"
	;;
	*)
		echo "compress: yes/no"
		exit 1
esac

if [ -n "$min_size" ]; then
	minsize="--min-file-size $min_size"
fi

if [ -n "$max_size" ]; then
	maxsize="--max-file-size $max_size"
fi

backup() {
	echo "Backing up $suite using config $config"

	if [ -f "$suite/exclude" ]; then
		excludefile=$(mktemp -t exclude)
		"$sed" -e "s|^|$sourcedir/|" < "$suite/exclude" > "$excludefile"
		exclude="--exclude-globbing-filelist $excludefile"
	fi

	if [ -f "$suite/include" ]; then
		includefile=$(mktemp -t include)
		"$sed" -e "s|^|$sourcedir/|" < "$suite/include" > "$includefile"
		include="--include-globbing-filelist $includefile"
	fi

	"$rdiff_backup" "$compress" -v "$verbose" --backup-mode --carbonfile --exclude-special-files --exclude-other-filesystems $include $exclude $minsize $maxsize --print-statistics "$source" "$target"

	"$rm" -f "$excludefile" "$includefile"
}

listinc() {
	"$rdiff_backup" "$compress" -v "$verbose" --list-increments "$target"
}

listincsize() {
	"$rdiff_backup" "$compress" -v "$verbose" --list-increment-sizes "$target"
}

listat() {
	time="$1"

	if [ -z "$time" ]; then
		echo "Kell idő paraméter!"
		exit 1
	fi

	"$rdiff_backup" "$compress" -v "$verbose" --list-at-time "$time" "$target"
}

listchanged() {
	time="$1"

	if [ -z "$time" ]; then
		echo "Kell idő paraméter!"
		exit 1
	fi

	"$rdiff_backup" "$compress" -v "$verbose" --list-changed-since "$time" "$target"
}

clean() {
	time="$1"

	if [ -z "$time" ]; then
		time="$max_age"
	fi

	if [ -z "$time" -a -z "$max_age" ]; then
		echo "Kell idő paraméter vagy a konfigba \$max_age!"
		exit 1
	fi

	"$rdiff_backup" "$compress" -v "$verbose" --force --remove-older-than "$time" "$target"
}

restore() {
	time="$1"
	#"$rdiff_backup" "$compress" -v "$verbose" --restore-as-of "$time" "$target"
}

verify() {
	time="$1"

	if [ -z "$time" ]; then
		time="now"
	fi

	"$rdiff_backup" "$compress" -v "$verbose" --verify-at-time "$time" "$target"
}

servertest() {
	"$rdiff_backup" "$compress" -v "$verbose" --test-server "$target"
}

config() {
	echo "Backup configuration:"
	echo "source: $source"
	echo "target: $target"
	echo "$rdiff_backup" "$compress" -v "$verbose" "$minsize" "$maxsize"

	if [ -f "$suite/exclude" ]; then
		excludefile=$(mktemp -t exclude)
		"$sed" -e "s|^|$sourcedir/|" < "$suite/exclude" > "$excludefile"
		echo "Exclude list:"
		"$cat" "$excludefile"
		"$rm" -f "$excludefile"
	fi

	if [ -f "$suite/include" ]; then
		includefile=$(mktemp -t include)
		"$sed" -e "s|^|$sourcedir/|" < "$suite/include" > "$includefile"
		echo "Include list:"
		"$cat" "$includefile"
		"$rm" -f "$includefile"
	fi
}

case "$action" in
	backup)
		backup $@
	;;
	listinc)
		listinc $@
	;;
	listincsize)
		listincsize $@
	;;
	listat)
		listat $@
	;;
	listchanged)
		listchanged $@
	;;
	clean)
		clean $@
	;;
	restore)
		restore $@
	;;
	verify)
		verify $@
	;;
	test)
		servertest $@
	;;
	config)
		config $@
	;;
	*)
		echo "Nincs ilyen action: $action"
		exit 1
esac
